<div class="cover mb-4 d-flex align-items-center justify-content-center bg-black">
  <div class="text-center text-white">
    <h1>Movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5 bg-black">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0 text-white">My Lists</h3>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-primary" %>
  </div>
  <div class="column">
    <% @lists.each do |list| %>
      <div class="co-12 col-sm-6 col-md-4 mb-3">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <div class="card-category">
            <%= list.name %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
